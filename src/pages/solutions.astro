---
import BaseLayout from '../components/layout/BaseLayout.astro';
import SolutionCard from '../components/business/SolutionCard.astro';
import type { Solution } from '../types';

const solutions = (await import('../data/solutions.json')).default as Solution[];
---
<BaseLayout
  title="解决方案"
  description="面向制造、金融与高科技行业的数字化转型、数据保护与终端安全整体方案。"
>
  <section class="space-y-6">
    <div class="text-center">
      <p class="text-sm font-semibold text-brand-500">Industry Blueprints</p>
      <h1 class="section-title">行业解决方案矩阵</h1>
      <p class="mt-3 text-slate-600">
        根据行业痛点提炼数字化路径，结合多厂商能力形成可复制的交付模板。
      </p>
    </div>
    <div class="grid gap-6 md:grid-cols-2">
      {solutions.map((solution) => <SolutionCard solution={solution} />)}
    </div>
  </section>
</BaseLayout>
