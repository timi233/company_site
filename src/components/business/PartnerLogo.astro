---
import type { Partner } from '../../types';

interface Props {
  partner: Partner;
}

const { partner } = Astro.props as Props;
---
<a
  href={partner.website ?? '#'}
  class="card-surface flex flex-col items-center justify-center gap-3 p-6 text-center"
  target={partner.website ? '_blank' : undefined}
  rel={partner.website ? 'noreferrer' : undefined}
>
  {partner.logo ? (
    <img src={partner.logo} alt={partner.name} class="h-12 w-32 object-contain" loading="lazy" />
  ) : (
    <div class="text-lg font-semibold text-slate-700">{partner.name}</div>
  )}
  <p class="text-sm text-slate-500">{partner.category}</p>
</a>
