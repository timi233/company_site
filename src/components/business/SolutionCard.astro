---
import type { Solution } from '../../types';

interface Props {
  solution: Solution;
}

const { solution } = Astro.props as Props;
---
<div class="card-surface flex flex-col gap-4 p-6">
  <div class="flex items-start justify-between gap-4">
    <div>
      <p class="text-sm font-semibold uppercase tracking-wide text-brand-500">{solution.industry}</p>
      <h3 class="mt-1 text-xl font-semibold text-slate-900">{solution.title}</h3>
    </div>
    {solution.image && (
      <img src={solution.image} alt={solution.title} class="h-16 w-16 rounded-xl object-cover" loading="lazy" />
    )}
  </div>
  <div>
    <p class="text-xs font-semibold uppercase text-slate-500">核心痛点</p>
    <ul class="mt-2 space-y-1 text-sm text-slate-600">
      {solution.painPoints.map((point) => (
        <li class="flex gap-2">
          <span class="text-brand-400">•</span>
          <span>{point}</span>
        </li>
      ))}
    </ul>
  </div>
  <div>
    <p class="text-xs font-semibold uppercase text-slate-500">解决路径</p>
    <ul class="mt-2 space-y-1 text-sm text-slate-600">
      {solution.solutions.map((item) => (
        <li class="flex gap-2">
          <span class="text-brand-400">→</span>
          <span>{item}</span>
        </li>
      ))}
    </ul>
  </div>
  <div class="flex flex-wrap gap-2 text-xs font-semibold text-brand-600">
    {solution.products.map((productId) => (
      <span class="rounded-full bg-brand-50 px-3 py-1">{productId}</span>
    ))}
  </div>
</div>
