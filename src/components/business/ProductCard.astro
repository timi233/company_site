---
import type { Product } from '../../types';

interface Props {
  product: Product;
}

const { product } = Astro.props as Props;
---
<div class="card-surface p-6 flex flex-col gap-4">
  <div class="flex items-center gap-3">
    <div class="h-12 w-12 rounded-2xl bg-brand-100 text-brand-600 flex items-center justify-center font-semibold">
      {product.icon ? <img src={product.icon} alt={product.name} class="h-10 w-10 object-contain" loading="lazy" /> : product.name.slice(0, 2)}
    </div>
    <div>
      <p class="text-lg font-semibold text-slate-900">{product.name}</p>
      <p class="text-sm text-slate-500">{product.vendor} Â· {product.category}</p>
    </div>
  </div>
  <p class="text-sm text-slate-600">{product.description}</p>
  <ul class="grid gap-2 text-sm text-slate-600">
    {product.features.map((feature) => (
      <li class="flex items-start gap-2">
        <span class="mt-1 h-2 w-2 rounded-full bg-brand-400"></span>
        <span>{feature}</span>
      </li>
    ))}
  </ul>
</div>
